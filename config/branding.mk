# Set all versions
CTOSP_BUILD_TYPE ?= UNOFFICIAL
CTOSP_BUILD_DATE := $(shell date -u +%Y%m%d)
CTOSP_PLATFORM_VERSION := 9.0
CTOSP_BUILD := $(CUSTOM_BUILD)

CTOSP_VERSION_NUM := v2.0

TARGET_PRODUCT_SHORT := $(subst ctosp_,,$(CTOSP_BUILD))
CTOSP_MAINTAINER ?= $(USER)

ifeq ($(IS_GO_VERSION), true)
CTOSP_VERSION := CTOSP_go-$(CTOSP_VERSION_NUM)_$(CTOSP_BUILD)-$(CTOSP_BUILD_DATE)-$(CTOSP_BUILD_TYPE)
ROM_FINGERPRINT := CTOSP_go/$(CTOSP_PLATFORM_VERSION)/$(TARGET_PRODUCT_SHORT)/$(CTOSP_BUILD_DATE)
else
CTOSP_VERSION := CTOSP-$(CTOSP_VERSION_NUM)_$(CTOSP_BUILD)-$(CTOSP_BUILD_DATE)-$(CTOSP_BUILD_TYPE)
ROM_FINGERPRINT := CTOSP/$(CTOSP_PLATFORM_VERSION)/$(TARGET_PRODUCT_SHORT)/$(CTOSP_BUILD_DATE)
endif

CTOSP_PROPERTIES := \
    org.ctosp.version=$(CTOSP_VERSION) \
    org.ctosp.build_date=$(CTOSP_BUILD_DATE) \
    org.ctosp.build_type=$(CTOSP_BUILD_TYPE) \
    org.ctosp.fingerprint=$(ROM_FINGERPRINT) \
    org.ctosp.device=$(CTOSP_BUILD) \
    org.ctosp.maintainer=$(CTOSP_MAINTAINER)
